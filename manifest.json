{
  "name": "Cleanup Tabs",
  "description": "Click to close tabs with self-defined URLs",
  "version": "1.2.0",
  "manifest_version": 3,
  "author": "Yang Liu",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"],
  "action": {
    "default_title": "Click to close tabs with self-defined URLs"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}
